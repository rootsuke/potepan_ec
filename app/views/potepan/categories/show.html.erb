<%= provide(:title, @taxon.name) %>

<%= render "shared/light_section_top", obj: @taxon %>

<%# MAIN CONTENT SECTION %>
<section class="mainContent clearfix productsContent">
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-4 col-xs-12 sideBar">
      <%= render "categories_tree" %>
      <%= render "price_slider" %>
      <%= render "color_filter" %>
      <%= render "size_filter" %>
      </div>

      <div class="col-md-9 col-sm-8 col-xs-12" id="rendering_products">
        <% if @view_type == "grid" %>
          <%= render "grid_view" %>
        <% else %>
          <%= render "list_view" %>
        <% end %>

      </div>
    </div>
  </div>
</section>

<%= render "shared/light_section_bottom" %>
