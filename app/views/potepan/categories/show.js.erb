<% if @view_type == "grid" %>
  $('#list_btn').removeClass("active");
  $('#grid_btn').addClass("active");
  $('#rendering_products').html("<%= escape_javascript(render 'grid_view') %>");
<% else %>
  $('#grid_btn').removeClass("active");
  $('#list_btn').addClass("active");
  $('#rendering_products').html("<%= escape_javascript(render 'list_view') %>");
<% end %>
